{
	"compilerOptions": {
		"module": "es6",
		"outDir": "dist",
		"declarationDir": "dist",
		"target": "es5",
		"moduleResolution": "node",
		"jsx": "react",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": ["node_modules", "example", "rollup.config.js"]
}